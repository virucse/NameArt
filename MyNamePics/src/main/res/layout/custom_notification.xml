<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cus_noti_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/custom_noti_bigpic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mv"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_72" />

    <LinearLayout
        android:id="@+id/mv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/custom_noti_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_72" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/custom_noti_title"
                style="@style/CustomNotificationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name" />

            <TextView
                android:id="@+id/custom_noti_subtext"
                style="@style/CustomNotificationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="jbjbvjbvjfjvnvkfnvknfkvkfnvkvkf" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>