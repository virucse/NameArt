<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300.0dip"
    android:layout_height="250.0dip"
    android:layout_gravity="center"
    android:background="#0c212121">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/shape">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60.0dip"
            android:layout_margin="8.0dip"
            android:background="@color/colorPrimary">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="@string/message_text"
                android:textColor="#ff000000"
                android:textSize="24.0sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/message"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10.0dip"
            android:gravity="center"
            android:text="@string/internet_error_message"
            android:textColor="#ffffffff"
            android:textSize="20.0sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60.0dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true">

            <Button
                android:id="@+id/dialogButtonyes"
                android:layout_width="80.0dip"
                android:layout_height="50.0dip"
                android:layout_centerInParent="true"
                android:layout_marginLeft="41.0dip"
                android:background="@drawable/shape"
                android:text="@string/okk_text"
                android:textAllCaps="false"
                android:textColor="#ffffffff"
                android:textSize="18.0sp" />

            <Button
                android:id="@+id/dialogButton_no"
                android:layout_width="80.0dip"
                android:layout_height="50.0dip"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="43.0dip"
                android:background="@drawable/shape"
                android:onClick="okButtonClicked"
                android:text="No"
                android:textAllCaps="false"
                android:textColor="#ffffffff"
                android:textSize="18.0sp"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>